mainColor = #0071BB;

.user
  text-align: center
  &__photo
    width: 200px;
    height: 200px;
    padding: 10px;
    border-radius: 50%;
    border: 1px solid mainColor;
    
  &__default-photo
    position: relative;
    margin: 0 auto;
    width: 200px;
    height: 200px;
    padding: 10px;
    border-radius: 50%;
    border: 10px solid #ffffff;
    background: mainColor;
    box-shadow: 0 0 0 2px mainColor;

  &__name
    text-transform: uppercase;
    font-size: 24px;

  &__surname
    text-transform: uppercase;
    font-size: 24px;
    font-weight: bold;

  &__profession
    text-transform: uppercase
    font-size: 14px


